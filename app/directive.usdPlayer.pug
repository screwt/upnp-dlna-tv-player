.right(style="width:calc(100% - 270px);float:right;")
    .sl(style="width:calc(100% - 5px);float:right;")
            input.mdl-slider.mdl-js-slider(type="range", min="0", max="100", value="0", tabindex="0")
    .label(style="width:0px;")
        i.fa.fa-volume-up
    .butt(style="margin-top:10px;")
        input.mdl-textfield__input(readonly, placeholder="Please, select a TV", ng-model="selectedDevice.name", style="width:calc(100% - 120px);float:right;padding:0;margin-right:26px;margin-top:5px;", id="select-device")

        ul.mdl-menu.mdl-menu--bottom-left.mdl-js-menu.mdl-js-ripple-effect(for="select-device", id="device-menu")
            li.mdl-menu__item(ng-repeat="device in devices track by $index", ng-click="selectDevice(device)") {{device.name}}
        button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--mini-fab(style="margin-left:0px;margin-top:3px;height:20px;min-width:20px;width:20px;font-size:10px;", ng-click="togglePlaylist()", ng-class="{'mdl-button--primary': showPlaylist == true}")
            i.fa.fa-list
        button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--mini-fab(style="margin-left:5px;margin-top:3px;height:20px;min-width:20px;width:20px;font-size:10px;", ng-click="toggleLogger()", ng-class="{'mdl-button--primary': showLogger == true}")
            i.fa.fa-info
        button.ico.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect.mdl-button--mini-fab(style="margin-left:18px;font-size:20px;height:20px;min-width:20px;width:20px;font-size:10px;margin-left:5px;margin-top:3px;", ng-click="launchSearch()")
            i.fa.fa-tv(style="margin-top:0px;") 
        
.left(style="width=270px;")
     button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect(ng-click="play()")
        i.fa.fa-play
     button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect(style="margin-left:10px;", ng-click="pause()")
         i.fa.fa-pause
     button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect(style="margin-left:10px;", ng-click="stop()")
         i.fa.fa-stop
     button.mdl-button.mdl-js-button.mdl-button--fab.mdl-js-ripple-effect(style="margin-left:10px;", ng-click="toggleAddMedia()")
         i.fa.fa-plus

.bottom(style="margin-top:10px;")
    .sl(style="width:calc(100% - 0px);float:right;")
            input.mdl-slider.mdl-js-slider(type="range", min="0", max="100", value="0", tabindex="0")

